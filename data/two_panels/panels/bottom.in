[toplevel-settings]
    edge='bottom'
    allignment='left'
    margin=0
    size-type='percent'
    width=100
    height=26

[0]
plugin-type = 'space'
size=4

[1]
    type = wincmd
    Config {
        Button1=iconify
        Button2=shade
    }
}

[2]
    type = space
    Config {
        Size=4
    }
}

Plugin {
    type = taskbar
    expand=1
    Config {
        tooltips=1
        IconsOnly=0
        AcceptSkipPager=1
        ShowIconified=1
        ShowMapped=1
        ShowAllDesks=0
        UseMouseWheel=1
        UseUrgencyHint=1
        FlatButton=0
        MaxTaskWidth=150
        spacing=1
    }
}

[3]
type = dirmenu

}

